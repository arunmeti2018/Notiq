<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Templates</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-100">

    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="bg-gray-800 text-white w-64 py-4 px-3 flex flex-col">
            <div class="mb-8">
                <h1 class="text-2xl font-bold">Admin Panel</h1>
                <p class="text-sm text-gray-300">Welcome, <%= user.username %>
                </p>
            </div>

            <nav class="flex-1">
                <ul>
                    <li class="mb-2">
                        <a href="/admin/dashboard" class="block py-2 px-4 hover:bg-gray-700 rounded">
                            <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="/admin/pages" class="block py-2 px-4 hover:bg-gray-700 rounded">
                            <i class="fas fa-file-alt mr-2"></i> Pages
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="/admin/templates" class="block py-2 px-4 bg-gray-700 rounded">
                            <i class="fas fa-layer-group mr-2"></i> Templates
                        </a>
                    </li>
                </ul>
            </nav>

            <div>
                <a href="/" class="block py-2 px-4 hover:bg-gray-700 rounded">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Site
                </a>
                <form action="/admin/logout" method="POST" class="mt-2">
                    <button type="submit" class="w-full text-left py-2 px-4 hover:bg-gray-700 rounded">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow py-4 px-6">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Manage Templates</h2>
                    <a href="/admin/templates/new"
                        class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                        <i class="fas fa-plus mr-2"></i> Create New Template
                    </a>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                <div class="mb-6">
                    <p class="text-gray-600">Create and manage markdown templates for different documentation types</p>
                </div>

                <!-- Templates Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% templates.forEach(template=> { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                            <div class="p-6">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center">
                                        <span class="text-2xl mr-3">
                                            <%= template.icon %>
                                        </span>
                                        <div>
                                            <h3 class="text-lg font-semibold text-gray-800">
                                                <%= template.name %>
                                            </h3>
                                            <span
                                                class="inline-block px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                                                <%= template.category %>
                                            </span>
                                        </div>
                                    </div>
                                    <% if (template.isSystem) { %>
                                        <span
                                            class="inline-block px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                                            System
                                        </span>
                                        <% } %>
                                </div>

                                <p class="text-gray-600 text-sm mb-4">
                                    <%= template.description %>
                                </p>

                                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                                    <span>By <%= template.author.username %></span>
                                    <span>Used <%= template.usageCount %> times</span>
                                </div>

                                <div class="flex space-x-2">
                                    <a href="/admin/templates/<%= template._id %>/edit"
                                        class="flex-1 bg-blue-600 text-white text-center py-2 px-3 rounded text-sm hover:bg-blue-700 transition-colors">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </a>
                                    <% if (!template.isSystem || user.role==='admin' ) { %>
                                        <button data-delete="/admin/templates/<%= template._id %>"
                                            data-item-name="<%= template.name %>"
                                            class="bg-red-600 text-white py-2 px-3 rounded text-sm hover:bg-red-700 transition-colors">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>

                <% if (templates.length===0) { %>
                    <div class="text-center py-12">
                        <i class="fas fa-layer-group text-4xl text-gray-400 mb-4"></i>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No templates found</h3>
                        <p class="text-gray-500 mb-6">Get started by creating your first template</p>
                        <a href="/admin/templates/new"
                            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                            <i class="fas fa-plus mr-2"></i> Create New Template
                        </a>
                    </div>
                    <% } %>
            </main>
        </div>
    </div>

    <script src="/js/admin.js"></script>
</body>

</html>